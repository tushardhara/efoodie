<div class="wrapper">
  	<%- partial ('partials/header.ejs') %>
  	<%- partial ('partials/nav.ejs') %>
	<div class="content-wrapper">
        <section class="content-header">
            <h1>Users <small>it all starts here</small></h1>
        </section>
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="box">
                        <div class="box-header with-border">
                            <h3 class="box-title">Users List</h3>
                        </div>
                        <div class="box-body">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th style="width: 10px">#</th>
                                        <th>Image</th>
                                        <th>Username</th>
                                        <th>Email</th>
                                        <th>Role</th>
                                        <th>Created At</th>
                                        <th>Updated At</th>
                                        <th style="width: 100px">Action</th>
                                    </tr>
                        
                                    <% _.each(data.users,function(val){%>   
                                    <tr>
                                        <td><%= val.id %></td>
                                        <td><img src="<%= val.avatar %>" class="img-circle" alt="<%= val.username %>" width="50"/></td>
                                        <td><%= val.username %></td>
                                        <td><%= val.email %></td>
                                        <td><%= val.roles %></td>
                                        <td><%= moment(val.createdAt).format('DD-MM-YYYY hh:mm') %></td>
                                        <td><%= moment(val.updatedAt).format('DD-MM-YYYY hh:mm') %></td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-info" style="width: 40px;display:inline"><i class="fa fa-pencil"></i></button>
                                            <button type="button" class="btn btn-sm btn-danger" style="width: 40px;display:inline"><i class="fa fa-trash"></i></button>
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                        <div class="box-footer clearfix">
                            <ul class=
                            "pagination pagination-sm no-margin pull-right">
                                <% _.each(_.range(data.page),function(val){%>
                                <li class="<%= (val+1)==req.param('number') || (_.isUndefined(req.param('number')) && (val+1)==1) ? 'active':''%>">
                                    <a href="/admin/dashboard/users/page/<%= val + 1%>"><%= val + 1%></a>
                                </li>
                                <% }) %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
  	<%- partial ('partials/footer.ejs') %>
</div>